<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Káº¿ thá»«a config máº·c Ä‘á»‹nh cá»§a Spring Boot -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Cho phÃ©p Spring Boot override thÃ´ng qua application.yml -->
    <springProperty scope="context" name="LOG_FILE" source="logging.file.name" defaultValue="logs/social-be.log"/>
    <springProperty scope="context" name="LOG_LEVEL" source="logging.level.root" defaultValue="INFO"/>

    <!-- ðŸŽ¨ Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN:-%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr([%thread]){cyan} %highlight(%-5level) %clr(%logger{36}){yellow} - %msg%n}</pattern>
        </encoder>
    </appender>

    <!-- ðŸ§± JSON file appender cho ELK -->
    <appender name="FILE_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/social-be-%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <!-- Encoder JSON dÃ nh cho ELK -->
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"app_name":"social-be","env":"dev"}</customFields>
        </encoder>
    </appender>

    <!-- Logger máº·c Ä‘á»‹nh -->
    <root level="${LOG_LEVEL}">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE_JSON" />
    </root>
</configuration>
